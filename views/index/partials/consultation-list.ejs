<% if (userData) { %>
    <div class="offcanvas offcanvas-end" tabindex="-1" id="my-consultations" aria-labelledby="my-consultationsLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="my-consultationsLabel">Lista moich konsultacji</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div id="my-consultations-list">
                <% userConsultations.forEach(consultation => { %>
                    <div class="consultation-item" data-consulation-id="<%= consultation._id %>">
                        <button class="my-consultation-item bg-danger" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= consultation._id%>" aria-expanded="false" aria-controls="collapse2">
                            <div class="d-flex flex-column">
                                <span><%= consultation.subject %></span>
                                <!-- <span>Opis</span> -->
                                <span><%= consultation.hours %><span>
                            </div>
                        </button>
                        <div class="collapse" id="collapse<%= consultation._id%>">
                            <div class="card card-body">
                                <div class="d-flex flex-column gap-2">
                                    <div class="details-item">
                                        <span class="title">Przedmiot:</span>
                                        <span class="value"><%= consultation.subject %></span>
                                    </div>
                                    <div class="details-item">
                                        <span class="title">Nauczyciel:</span>
                                        <span class="value"><%= consultation.teacher %></span>
                                    </div>
                                    <div class="details-item">
                                        <span class="title">Godziny:</span>
                                        <span class="value"><%= consultation.hours %></span>
                                    </div>
                                    <div class="details-item">
                                        <span class="title">Data:</span>
                                        <span class="value"><%= consultation.date %></span>
                                    </div>
                                    <div class="details-item">
                                        <span class="title">Budynek:</span>
                                        <span class="value"><%= consultation.building %></span>
                                    </div>
                                    <div class="details-item">
                                        <span class="title">Sala:</span>
                                        <span class="value"><%= consultation.classroom %></span>
                                    </div>
                                    <div class="details-item">
                                        <span class="title">Opis:</span>
                                        <span class="value"><%= consultation.description || "Brak Opisu" %></span>
                                    </div>
                                    <button class="btn btn-danger unregister-btn" data-consulation-id="<%= consultation._id %>" type="button">Wypisz siÄ™</button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
<% } %>